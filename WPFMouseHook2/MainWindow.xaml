<Window x:Class="WPFMouseHook2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMouseHook2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="27" Margin="350,9,0,0" VerticalAlignment="Top" Width="115" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="282" Margin="22,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="261"/>

    </Grid>
</Window>
